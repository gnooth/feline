using: feline ;
in: user

{
    "accept-string"
    "ansi-color"
    "asm-mode"
    "c-mode"
    "completion"
    "diff-mode"
    "directories"
    "directory-mode"
    "editor"
    "feline-mode"
    "feral-colors"
    "feral-core"
    "feral-hooks"
    "feral-key"
    "find-in-files"
    "history"
    "js-mode"
    "keymaps"
    "kill-ring"
    "lisp-mode"
    "list-buffers"
    "list-symbols"
    "logging"
    "mini"
    "modes"
    "search"
    "search-mode"
    "symbols"
    "symbols-mode"
} [ delete-vocab ] each

in: feral-loader

empty

feline-home "feral" path-append constant feral-source-directory

: load-feral-source-file // string -> void
    feral-source-directory swap path-append load ;

feral-source-directory add-source-directory

: load-feral
    {
        "feral-key.feline"
        "feral-colors.feline"
        "feral-hooks.feline"
        "directories.feline"
        "logging.feline"
        "feral-core.feline"
        "history.feline"
        "completion.feline"
        "accept-string.feline"
        "mini.feline"
        "modes.feline"
        "display.feline"
        "undo.feline"
        "move.feline"
        "kill-ring.feline"
        "edit.feline"
        "save.feline"
        "quit.feline"
        "buffer.feline"
        "symbols-mode.feline"
        "list-symbols.feline"
        "symbols.feline"
        "find-definition.feline"
        "asm-mode.feline"
        "c-mode.feline"
        "js-mode.feline"
        "feline-mode.feline"
        "lisp-mode.feline"
        "list-buffers.feline"
        "diff-mode.feline"
        "git.feline"
        "directory-mode.feline"
        "search-mode.feline"
        "search.feline"
        "find-in-files.feline"
        "commands.feline"
        "keymaps.feline"
    } ' load-feral-source-file each
;

load-feral
