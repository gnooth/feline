using: feline accessors logging ;
in: history

private

special: current-history

tuple: history
    strings
    index
;

: strings                               -- void -> vector/f
    current-history get [ strings>> ] [ f ] if* ;

: index                                 -- void -> index/f
    current-history get [ index>> ] [ f ] if* ;

: index!                                -- index -> void
    current-history get [ index<< ] [ drop ] if* ;

public

: reset-history
    f index! ;

: history-previous                      -- void -> string/f
    index [ strings length index! ] unless
    index 0 > [
        index 1- index!
        index strings nth
    ] [ f ] if ;

: history-next
    index [ strings length index! ] unless
    index strings length 1- < [
        index 1+ index!
        index strings nth
    ] [ f ] if ;

: make-history                          -- void -> history
    history make-instance
    100 <vector> >>strings
;

: initialize-history                    -- history/f -> void
    "initialize-history" log
    [ make-history ] unless* current-history set
;

: update-history ( s )                  -- string/f -> void
    "update-history called" log
    s string? [
        current-history get [
            strings>> s over vector-adjoin -- -> vector
            "-- begin history" log
            [ log ] each
            "-- end history" log
            --         save-history
        ] when*
    ] when
;
