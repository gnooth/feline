require-system-file test-framework

LANGUAGE: feline

CONTEXT: feline forth ;
CURRENT: feline

// length, push
test: test1 ( -- )
    "test" length 4 = check-t
    10 <sbuf> local sb
    sb length 0 = check-t
    'x' sb push
    sb length 1 = check-t
    V{ 1 2 3 } local v
    v length 3 = check-t
    4 v push
    v length 4 = check-t
;

test1

// nth
test: test2 ( -- )
    0 "test" nth 't' = check-t
    3 "test" nth 't' = check-t
    "test" string>sbuf local sb
    0 sb nth 't' = check-t
    1 sb nth 'e' = check-t
    3 sb nth 't' = check-t
    V{ 1 2 3 } local v
    0 v nth 1 = check-t
    2 v nth 3 = check-t
    10 42 <array> local a
    0 a nth 42 = check-t
    9 a nth 42 = check-t
;

test2

empty

?cr .( Reached end of generic-tests )
