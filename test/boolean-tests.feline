require-system-file test-framework

LANGUAGE: feline

CONTEXT: feline forth ;
CURRENT: feline

\ object?
test: test1
    42 object? check-false
    10 <vector> object? check-t
;

test1

\ string?
test: test2
    42 string? check-false
    "test" string? check-t
    s" test" >string string? check-t
    s" test" >transient-string string? check-t
;

test2

\ not
test: test3
    f not check-t
    t not check-false
    42 not check-false
    0 not check-false

    \ 0 is not false
    0 check
;

test3

empty

?cr .( Reached end of boolean-tests )
